pkgname=openmp-git
pkgver=13.0.0
pkgrel=1
pkgdesc="LLVM OpenMP Runtime Library"
arch=('x86_64')
url="https://openmp.llvm.org/"
license=('custom:Apache 2.0 with LLVM Exception')
depends=('glibc' 'libelf' 'libffi')
makedepends=('cmake' 'ninja')
conflicts=('openmp')
provides=('openmp')

# remove llvm github source from source add do a git clone --depth=1 for fast cloning

prepare(){
  if ! dir llvm-project; then
    git clone --depth=1 https://github.com/llvm/llvm-project.git
  fi
}

pkgver(){
  cd llvm-project
  echo 13.0.0.$(date -I | sed 's/-/_/' | sed 's/-/_/').$(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build(){

  cd llvm-project/openmp

  if dir build; then
    rm -rf build
  fi

  cmake -H. -G Ninja -Bbuild \
  -DCMAKE_BUILD_TYPE=Release \
  -DCMAKE_INSTALL_PREFIX=/usr \
  -DLIBOMP_INSTALL_ALIASES=OFF

  ninja -C build
}

package() {
  cd llvm-project/openmp

  DESTDIR="$pkgdir" ninja -C build/ install

  install -Dm644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

  rm "$pkgdir/usr/lib/libarcher_static.a"
}
