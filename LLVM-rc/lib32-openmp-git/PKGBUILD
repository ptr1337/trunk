pkgname=lib32-openmp-git
pkgver=13.0.0
pkgrel=1
pkgdesc="LLVM OpenMP Runtime Library (32-bit)"
arch=('x86_64')
url="https://openmp.llvm.org/"
license=('custom:Apache 2.0 with LLVM Exception')
depends=('lib32-glibc' 'lib32-libelf' 'lib32-libffi' 'openmp')
makedepends=('cmake' 'ninja')
provides=('lib32-openmp-git' 'lib32-openmp')

# remove llvm github source from source add do a git clone --depth=1 for fast cloning

prepare(){
  if ! dir llvm-project; then
    git clone --depth=1 https://github.com/llvm/llvm-project.git
  fi
}

pkgver(){
  cd llvm-project
  echo 13.0.0.$(date -I | sed 's/-/_/' | sed 's/-/_/').$(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build(){
export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

  cd llvm-project/openmp

  if dir build; then
    rm -rf build
  fi

  cmake -H. -G Ninja -Bbuild \
  -DCMAKE_BUILD_TYPE=Release \
  -DCMAKE_INSTALL_PREFIX=/usr \
  -DCMAKE_C_FLAGS:STRING=-m32 \
  -DCMAKE_CXX_FLAGS:STRING=-m32 \
  -DLLVM_TARGET_ARCH:STRING=i686 \
  -DLIBOMP_INSTALL_ALIASES=OFF

  ninja -v -C build
}

package() {
  cd llvm-project/openmp

  DESTDIR="$pkgdir" ninja -C build/ install

  rm -rf "$pkgdir"/usr/{share,include,bin}

  mv "$pkgdir"/usr/lib/ "$pkgdir"/usr/lib32/

  install -Dm644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

  rm "$pkgdir/usr/lib32/libarcher_static.a"
}
