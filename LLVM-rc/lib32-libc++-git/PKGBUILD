pkgbase=lib32-libc++-git
pkgname=('lib32-libc++-git' 'lib32-libc++abi-git' 'lib32-libc++experimental-git')
pkgver=13.0.0
pkgrel=1
url="https://libcxx.llvm.org/"
license=('custom:Apache 2.0 with LLVM Exception')
arch=('x86_64')
depends=('lib32-gcc-libs')
makedepends=('lib32-clang' 'cmake' 'lib32-llvm' 'lib32-libunwind' 'ninja' 'python')

# remove llvm github source from source add do a git clone --depth=1 for fast cloning

prepare(){
  if ! dir llvm-project; then
    git clone --depth=1 https://github.com/llvm/llvm-project.git
  fi
}

pkgver(){
  cd llvm-project
  echo 13.0.0.$(date -I | sed 's/-/_/' | sed 's/-/_/').$(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

build(){
export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

  cd llvm-project

  if dir build-libc++; then
    rm -rf build-libc++
  fi

  if dir build-libc++abi; then
    rm -rf build-libc++abi
  fi

  cmake -H. -G Ninja -Bbuild-libc++ \
  -S libcxx  \
  -DCMAKE_BUILD_TYPE=Release \
  -DCMAKE_INSTALL_PREFIX=/usr \
  -DLLVM_LIBDIR_SUFFIX=32 \
  -DCMAKE_C_FLAGS:STRING=-m32 \
  -DCMAKE_CXX_FLAGS:STRING=-m32 \
  -DLLVM_TARGET_ARCH:STRING=i686 \
  -DCMAKE_C_COMPILER=clang \
  -DCMAKE_CXX_COMPILER=clang++ \
  -DLIBCXX_INSTALL_EXPERIMENTAL_LIBRARY=NO

  cmake -H. -G Ninja -Bbuild-libc++abi \
  -S libcxxabi  \
  -DCMAKE_BUILD_TYPE=Release \
  -DCMAKE_INSTALL_PREFIX=/usr \
  -DLLVM_LIBDIR_SUFFIX=32 \
  -DCMAKE_C_FLAGS:STRING=-m32 \
  -DCMAKE_CXX_FLAGS:STRING=-m32 \
  -DLLVM_TARGET_ARCH:STRING=i686 \
  -DCMAKE_C_COMPILER=clang \
  -DCMAKE_CXX_COMPILER=clang++

  ninja -C build-libc++
  ninja -C build-libc++abi
}

package_lib32-libc++-git(){
  pkgdesc='LLVM C++ standard library. (32-bit)'
  depends=("lib32-libc++abi" "libc++")
  options=('staticlibs')
  provides=('lib32-libc++-git' 'lib32-libc++')

  DESTDIR="$pkgdir" ninja -C llvm-project/build-libc++/ install

  rm -rf "${pkgdir}"/usr/{include,share,bin}

  install -Dm0644 llvm-project/libcxx/CREDITS.TXT "$pkgdir"/usr/share/licenses/"$pkgname"/CREDITS
  install -Dm0644 llvm-project/libcxx/LICENSE.TXT "$pkgdir"/usr/share/licenses/"$pkgname"/LICENSE
}

package_lib32-libc++abi-git(){
  pkgdesc='Low level support for the LLVM C++ standard library. (32-bit)'
  options=('staticlibs')
  depends=('libc++abi')
  provides=('lib32-libc++abi-git' 'lib32-libc++abi')

  DESTDIR="$pkgdir" ninja -C llvm-project/build-libc++abi/ install

  rm -rf "${pkgdir}"/usr/{include,share,bin}

  install -Dm0644 llvm-project/libcxxabi/CREDITS.TXT "$pkgdir"/usr/share/licenses/"$pkgname"/CREDITS
  install -Dm0644 llvm-project/libcxxabi/LICENSE.TXT "$pkgdir"/usr/share/licenses/"$pkgname"/LICENSE
}

package_lib32-libc++experimental-git(){
  pkgdesc='LLVM C++ experimental library. (32-bit)'
  depends=("lib32-libc++" "libc++experimental")
  provides=('lib32-libc++experimental-git' 'lib32-libc++experimental')

  install -Dm0644 -t "$pkgdir"/usr/lib32/ llvm-project/build-libc++/lib32/libc++experimental.a
  install -Dm0644 llvm-project/libcxx/CREDITS.TXT "$pkgdir"/usr/share/licenses/"$pkgname"/CREDITS
  install -Dm0644 llvm-project/libcxx/LICENSE.TXT "$pkgdir"/usr/share/licenses/"$pkgname"/LICENSE
}
