pkgname=lib32-polly-git
pkgver=13.0.0
pkgrel=1
pkgdesc="High-level loop and data-locality optimizer and optimization infrastructure for LLVM (32-bit)"
arch=('x86_64')
url="https://polly.llvm.org/"
license=('custom:Apache 2.0 with LLVM Exception')
depends=('gcc-libs' 'lib32-gcc-libs' 'polly')
makedepends=('llvm' 'lib32-llvm' 'cmake' 'ninja' 'python-sphinx')
provides=('lib32-polly' 'lib32-polly-git')

# remove llvm github source from source add do a git clone --depth=1 for fast cloning

prepare() {
  if ! dir llvm-project; then
    git clone --depth=1 https://github.com/llvm/llvm-project.git
  fi
}

pkgver(){
  cd llvm-project
  echo 13.0.0.$(date -I | sed 's/-/_/' | sed 's/-/_/').$(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}


build() {
export PKG_CONFIG_PATH="/usr/lib32/pkgconfig"

  cd llvm-project/polly

  cmake -H. -G Ninja -Bbuild \
  -DCMAKE_BUILD_TYPE=Release \
  -DCMAKE_INSTALL_PREFIX=/usr \
  -DLLVM_LIBDIR_SUFFIX=32 \
  -DCMAKE_C_FLAGS:STRING=-m32 \
  -DCMAKE_CXX_FLAGS:STRING=-m32 \
  -DLLVM_TARGET_ARCH:STRING=i686 \
  -DLLVM_LINK_LLVM_DYLIB=ON \
  -DLLVM_BUILD_TESTS=ON \
  -DLLVM_BUILD_DOCS=ON \
  -DLLVM_ENABLE_SPHINX=ON \
  -DSPHINX_WARNINGS_AS_ERRORS=OFF \
  -DLLVM_EXTERNAL_LIT=/usr/bin/lit \
  -DLLVM_BUILD_MAIN_SRC_DIR="$srcdir/llvm-project/llvm"

  ninja -C build/
}

#check() {
#  cd llvm-project/polly
#  ninja -C build/ check-polly
#}

package() {

  cd llvm-project/polly

  DESTDIR="$pkgdir" ninja -C build/ install

  rm -rf "$pkgdir"/usr/{share,include,bin}

  install -Dm644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
